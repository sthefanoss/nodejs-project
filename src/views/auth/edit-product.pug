extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(action=(product!=null?`/auth/edit-product/${product.id}`:"/auth/add-product"), method="POST")
            .form-control
                label(for="title") Title
                input(type="text", name="title", id="title", value=(product!=null?product.title:''))
            .form-control
                label(for="imageUrl") Image URL
                input(type="text", name="imageUrl", id="imageUrl", value=(product!=null?product.imageUrl:''))
            .form-control
                label(for="price") Price
                input(type="number", name="price", id="price", step="0.01",value=(product!=null?product.price:''))
            .form-control
                label(for="description") Description
                textarea(name="description", id="description", rows="5") #{product!=null?product.description:''}
            button.btn(type="submit") #{product!=null ? 'Edit Product' : 'Add Product'}